// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("viewer") // admin, analyst, scientist, viewer
  status    String   @default("active") // active, inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model KnowledgeEntry {
  id          String   @id @default(cuid())
  title       String
  type        String   // PDF, CSV, JSON, TXT
  status      String   @default("processing") // processing, indexed, error
  content     String?  // Encrypted content
  metadata    String?  // JSON metadata
  uploadedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AnomalyLog {
  id        String   @id @default(cuid())
  type      String   // critical, warning, info
  message   String
  source    String
  severity  Int      @default(0) // 0-10 severity score
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model EncryptionLog {
  id          String   @id @default(cuid())
  operation   String   // encrypt, decrypt
  algorithm   String   @default("AHE-HEE")
  dataSize    Int
  processingTime Int   // in milliseconds
  success     Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model QueryLog {
  id          String   @id @default(cuid())
  query       String
  response    String?
  confidence  Float?
  resultCount Int      @default(0)
  processingTime Int   // in milliseconds
  createdAt   DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  userId    String?
  resource  String
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())
}
